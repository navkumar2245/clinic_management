<h1>Appointments</h1>

<table>
  <thead>
    <tr>
      <th>Patient Name</th>
      <th>Appointment Time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.patient_name %></td>
        <td><%= appointment.appointment_time %></td>
        <td><%= appointment.status %></td>
        <td><%= link_to 'Show', clinic_appointment_path(@clinic, appointment) %></td>
        <td><%= link_to 'Edit', edit_clinic_appointment_path(@clinic, appointment) %></td>
        <td><%= link_to 'Destroy', clinic_appointment_path(@clinic, appointment), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appointment', new_clinic_appointment_path(@clinic) %>
