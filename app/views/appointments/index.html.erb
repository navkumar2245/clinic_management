<div class="flex">
  <!-- Sidebar -->
  <div class="w-1/4 bg-gray-100 p-4">
    <h2 class="text-lg font-bold mb-4">Modules</h2>
    <ul>
      <li class="mb-2">
        <%= link_to "Dashboard", "/dashboard", class: "text-blue-500 hover:text-blue-700" %>
      </li>
      <li class="mb-2">
        <%= link_to "Appointments", clinic_appointments_path(@clinic), class: "text-blue-500 hover:text-blue-700" %>
      </li>
      <!-- Add more modules as needed -->
    </ul>
  </div>

  <!-- Main Content -->
  <div class="w-3/4 p-4">
    <h1 class="text-2xl font-bold mb-4">Appointments</h1>

    <% if @appointments.any? %>
      <table class="w-full mb-4">
        <thead>
          <tr>
            <th class="px-4 py-2 border">Patient Name</th>
            <th class="px-4 py-2 border">Date</th>
            <th class="px-4 py-2 border">Status</th>
            <th class="px-4 py-2 border">Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @appointments.each do |appointment| %>
            <tr>
              <td class="px-4 py-2 border"><%= appointment.patient_name %></td>
              <td class="px-4 py-2 border"><%= appointment.created_at.strftime("%Y-%m-%d") %></td>
              <td class="px-4 py-2 border"><%= appointment.status %></td>
              <td class="px-4 py-2 border">
                <%= link_to "Show", clinic_appointment_path(@clinic, appointment), class: "text-blue-500 hover:text-blue-700 mr-2" %>
                <%= link_to "Edit",  edit_clinic_appointment_path(@clinic, appointment), class: "text-green-500 hover:text-green-700 mr-2" %>
                <%= link_to "Delete", clinic_appointment_path(@clinic, appointment), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:text-red-700" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p>No appointments found.</p>
    <% end %>

    <%= link_to "New Appointment", new_clinic_appointment_path(@clinic), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
